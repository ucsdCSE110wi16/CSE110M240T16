<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeCharcoal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SignUp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:src="@drawable/loginbuttonbackground"
        android:layout_alignTop="@+id/btnRegister"
        android:layout_alignBottom="@+id/btnRegister"
        android:layout_toRightOf="@+id/txtInfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textColor="@color/themeWhite"
        android:textSize="26dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign up for Polarity "
        android:id="@+id/titleText"
        android:layout_above="@+id/txtInfo"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/backButton" />
    <!--Back button-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;-"
        android:id="@+id/backButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toMainActivity"
        android:textColor="@color/themeWhite"
        android:background="@android:color/transparent"
        />

    <!--Register button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnRegister"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:textColor="@color/themeWhite"
        android:background="@android:color/transparent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/backButton" />

    <!--Image for Back Button-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@drawable/back_button"
        android:layout_alignTop="@+id/titleText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/backButton"
        android:layout_alignEnd="@+id/backButton"
        android:layout_alignBottom="@+id/backButton" />



    <!--grey rectangle behind username-->
    <ImageView
        android:src="@drawable/textviewbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView11"
        android:layout_alignBottom="@+id/tbEventName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tbEventName"
        android:layout_alignRight="@+id/tbEventName"
        android:layout_alignEnd="@+id/tbEventName" />

    <!--grey rectangle behind email-->
    <ImageView
        android:src="@drawable/textviewbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tbEmail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--grey rectangle behind password-->
    <ImageView
        android:src="@drawable/textviewbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView12"
        android:layout_alignBottom="@+id/main_tbPassword"
        android:layout_alignRight="@+id/main_tbPassword"
        android:layout_alignEnd="@+id/main_tbPassword" />

    <!--grey rectangle behind confirm password-->
    <ImageView
        android:src="@drawable/textviewbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView14"
        android:layout_alignBottom="@+id/tbRePassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tbRePassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbEventName"
        android:hint="@string/username"
        android:layout_below="@+id/txtInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="italic"
        android:layout_marginTop="44dp"
        android:layout_alignRight="@+id/tbEmail"
        android:layout_alignEnd="@+id/tbEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbEmail"
        android:hint="@string/email"
        android:textStyle="italic"
        android:layout_below="@+id/tbEventName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textStyle="italic"
        android:ems="10"
        android:id="@+id/main_tbPassword"
        android:hint="@string/password"
        android:layout_below="@+id/tbEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tbEmail"
        android:layout_alignEnd="@+id/tbEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/confirm_password"
        android:ems="10"
        android:id="@+id/tbRePassword"
        android:textStyle="italic"
        android:layout_below="@+id/main_tbPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/main_tbPassword"
        android:layout_alignEnd="@+id/main_tbPassword" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:layout_below="@+id/tbEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="462dp"
        android:layout_marginStart="462dp" />




</RelativeLayout>
