<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/themeCharcoal"
    tools:context="com.parse.starter.CreateEvent">

    <!-- grey rectangle behind create event-->

    <!-- grey rectangle behind location-->

    <!-- grey rectangle behind time-->

    <!-- grey rectangle behind description-->

    <!--Text box behind Add Movies Button-->
    <ImageView
        android:src="@drawable/loginbuttonbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView20"
        android:layout_above="@+id/inviteFriends_btnInviteFriends"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/createEvent_tbDescription"
        android:layout_alignRight="@+id/inviteFriends_btnInviteFriends"
        android:layout_alignEnd="@+id/inviteFriends_btnInviteFriends" />

    <!--Red Box behind Add Friends Button-->
    <ImageView
        android:src="@drawable/loginbuttonbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView21"
        android:layout_alignBottom="@+id/inviteFriends_btnInviteFriends"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/inviteFriends_btnSelectAll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--Red Box behind Create Event Button-->
    <ImageView
        android:src="@drawable/loginbuttonbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView22"
        android:layout_below="@+id/inviteFriends_btnInviteFriends"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textColor="@color/themeWhite"
        android:textSize="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create New Event"
        android:gravity="center"
        android:id="@+id/inviteFriends_txtTitle"
        android:layout_alignTop="@+id/inviteFriends_btnBack"
        android:layout_centerHorizontal="true" />


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Name"
    android:id="@+id/main_txtUserName"
    android:layout_marginTop="40dp"
    android:layout_below="@+id/inviteFriends_btnBack"
    android:layout_toLeftOf="@+id/inviteFriends_btnSelectAll"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
        android:gravity="center|center_vertical"/>

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/createEvent_tbName"
        android:hint="Event Name"
        android:textStyle="italic"
        android:background="@color/themeLightGray"
        android:layout_below="@+id/inviteFriends_btnBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textEmailAddress"
    android:ems="10"
    android:id="@+id/createEvent_tbLocation"
        android:hint="Location"
        android:textStyle="italic"
        android:background="@color/themeLightGray"
        android:layout_alignTop="@+id/main_txtUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:id="@+id/createEvent_tbTime"
        android:hint="Time"
        android:textStyle="italic"
        android:background="@color/themeLightGray"
        android:layout_below="@+id/createEvent_tbLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:id="@+id/createEvent_tbDescription"
        android:hint="Description"
        android:gravity="top"
        android:textStyle="italic"
        android:layout_above="@+id/inviteFriends_btnSelectAll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView20"
        android:layout_alignEnd="@+id/imageView20"
        android:layout_below="@+id/main_txtUserName"
        android:background="@color/themeLightGray" />

    <Button
        android:textColor="@color/themeWhite"
        android:background="@drawable/button_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Invite Friends"
    android:id="@+id/inviteFriends_btnInviteFriends"
    android:layout_above="@+id/createEvent_btnCreateEvent"
    android:layout_alignLeft="@+id/inviteFriends_btnSelectAll"
    android:layout_alignStart="@+id/inviteFriends_btnSelectAll"
    android:layout_alignRight="@+id/inviteFriends_btnSelectAll"
    android:layout_alignEnd="@+id/inviteFriends_btnSelectAll"
        />

    <Button
        android:textColor="@color/themeWhite"
        android:background="@drawable/button_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Movies"
        android:id="@+id/inviteFriends_btnSelectAll"
        android:layout_above="@+id/inviteFriends_btnInviteFriends"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:textColor="@color/themeWhite"
        android:background="@drawable/button_background"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;-"
        android:id="@+id/inviteFriends_btnBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Create Event Button-->
    <Button
        android:textColor="@color/themeWhite"
        android:background="@drawable/button_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event "
        android:id="@+id/createEvent_btnCreateEvent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/inviteFriends_btnInviteFriends"
        android:layout_alignEnd="@+id/inviteFriends_btnInviteFriends" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/inviteFriends_btnBack"
        android:layout_toStartOf="@+id/inviteFriends_txtTitle"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/inviteFriends_btnBack"
        android:layout_alignEnd="@+id/inviteFriends_btnBack"
        android:src="@drawable/back_button" />


</RelativeLayout>
