<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.CreateEvent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Creating New Event"
        android:id="@+id/titleText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Name"
    android:id="@+id/txtUserName"
    android:layout_marginTop="40dp"
    android:layout_below="@+id/backButton"
    android:layout_toLeftOf="@+id/voteButton"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Location"
    android:id="@+id/txtEmail"
    android:layout_below="@+id/txtUserName"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Time"
    android:id="@+id/txtPassword"
    android:layout_below="@+id/txtEmail"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Description"
    android:id="@+id/txtRePassword"
    android:layout_below="@+id/txtPassword"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tbUserName"
    android:layout_alignBottom="@+id/txtUserName"
    android:layout_alignRight="@+id/tbEmail"
    android:layout_alignEnd="@+id/tbEmail"
    android:layout_alignLeft="@+id/tbEmail"
    android:layout_alignStart="@+id/tbEmail"
    android:layout_alignTop="@+id/txtUserName" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textEmailAddress"
    android:ems="10"
    android:id="@+id/tbEmail"
    android:layout_above="@+id/txtPassword"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/txtUserName" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/timeField"
    android:layout_alignBottom="@+id/txtPassword"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/tbEmail" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/descriptionField"
    android:layout_alignTop="@+id/txtRePassword"
    android:layout_alignRight="@+id/tbUserName"
    android:layout_alignEnd="@+id/tbUserName"
    android:layout_alignBottom="@+id/txtRePassword" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Invite Friends"
    android:id="@+id/addMoviesButton"
    android:layout_above="@+id/goingButton"
    android:layout_alignLeft="@+id/voteButton"
    android:layout_alignStart="@+id/voteButton"
    android:layout_alignRight="@+id/voteButton"
    android:layout_alignEnd="@+id/voteButton"
    android:onClick="toInviteFriends"
        />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add Movies"
    android:id="@+id/voteButton"
    android:layout_above="@+id/addMoviesButton"
    android:layout_centerHorizontal="true"
    android:onClick="toAddMovies"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;-"
        android:id="@+id/backButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toHubActivity"
        />
    <!-- Create Event Button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event "
        android:id="@+id/goingButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:layout_alignLeft="@+id/addMoviesButton"
        android:layout_alignStart="@+id/addMoviesButton"
        android:layout_alignRight="@+id/addMoviesButton"
        android:layout_alignEnd="@+id/addMoviesButton"
        android:onClick="eventCreatedToHubActivity"
        />

</RelativeLayout>
