<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LogIn">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Polarity Logo"
        android:id="@+id/main_Logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username"
        android:id="@+id/main_txtUserName"
        android:layout_below="@+id/main_Logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/main_txtPassword"
        android:layout_below="@+id/main_txtUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/main_tbPassword"
        android:layout_alignTop="@+id/main_txtPassword"
        android:layout_alignLeft="@+id/main_Logo"
        android:layout_alignStart="@+id/main_Logo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/main_txtUserName"
        android:layout_alignLeft="@+id/main_tbPassword"
        android:layout_alignStart="@+id/main_tbPassword"
        android:layout_alignRight="@+id/main_tbPassword"
        android:layout_alignEnd="@+id/main_tbPassword"
        android:id="@+id/main_tbUserName" />

    <!-- forgot password button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:id="@+id/main_btnForgotPassword"
        android:layout_below="@+id/main_btnCreateAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/main_btnCreateAccount"
        android:layout_alignEnd="@+id/main_btnCreateAccount"
        />

    <!-- Login button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/main_btnLogin"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/main_tbPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    <!-- Create Account button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/main_btnCreateAccount"
        android:layout_below="@+id/main_btnLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/main_btnLogin"
        android:layout_alignEnd="@+id/main_btnLogin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/main_tbInfo"
        android:layout_below="@+id/main_tbPassword"
        android:layout_alignLeft="@+id/main_tbPassword"
        android:layout_alignStart="@+id/main_tbPassword"
        android:textColor="@android:color/holo_red_dark" />

</RelativeLayout>
