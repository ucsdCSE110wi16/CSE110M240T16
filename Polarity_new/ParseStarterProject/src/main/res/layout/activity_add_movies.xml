<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/themeCharcoal"
    tools:context="com.parse.starter.AddMovies">

    <!--back button image view -->
    <ImageView
        android:src="@drawable/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/addMovies_tbSearch"
        android:layout_alignStart="@+id/addMovies_btnBack"
        android:layout_alignLeft="@+id/addMovies_btnBack"
        android:layout_alignRight="@+id/addMovies_btnBack"
        android:layout_alignEnd="@+id/addMovies_btnBack" />

    <ImageView
        android:src="@drawable/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/addMovies_btnSearch"
        android:layout_alignLeft="@+id/addMovies_btnHome"
        android:layout_alignStart="@+id/addMovies_btnHome" />

    <!-- Search ImageView-->
    <ImageView
        android:src="@drawable/search_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchImageView"
        android:layout_alignTop="@+id/addMovies_tbSearch"
        android:layout_alignRight="@+id/addMovies_btnSearch"
        android:layout_alignEnd="@+id/addMovies_btnSearch"
        android:layout_alignLeft="@+id/addMovies_btnSearch"
        android:layout_alignStart="@+id/addMovies_btnSearch"
        android:layout_alignBottom="@+id/addMovies_btnSearch"
        />

    <!-- Add Movies ImageView-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/importQueueImageView"
        android:layout_alignTop="@+id/addMovies_ImportMovieQueue"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/addMovies_ImportMovieQueue"
        android:layout_alignEnd="@+id/addMovies_ImportMovieQueue"
        android:layout_alignLeft="@+id/addMovies_ImportMovieQueue"
        android:layout_alignStart="@+id/addMovies_ImportMovieQueue"
        android:layout_alignBottom="@+id/addMovies_ImportMovieQueue"
        android:src="@drawable/loginbuttonbackground"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchMoviesImageView"
        android:layout_below="@+id/addMovies_btnHome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/textviewbackground"
        android:layout_above="@+id/addMovies_lvMovieList"
        android:layout_alignRight="@+id/addMovies_tbSearch"
        android:layout_alignEnd="@+id/addMovies_tbSearch" />

    <!-- Movie list ImageView-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieListImageView"
        android:layout_alignTop="@+id/addMovies_lvMovieList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/movie_listbackground_large"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Movies"
        android:textSize="28dp"
        android:id="@+id/inviteFriends_txtTitle"
        android:textColor="@color/themeWhite"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Back button-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addMovies_btnBack"
        android:layout_above="@+id/addMovies_tbSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        />

    <!-- Home button-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addMovies_btnHome"
        android:layout_alignTop="@+id/inviteFriends_txtTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        />

    <!-- Import Movies button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import Movies Queue "
        android:id="@+id/addMovies_ImportMovieQueue"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:textColor="@color/themeWhite"
        android:layout_alignRight="@+id/addMovies_lvMovieList"
        android:layout_alignEnd="@+id/addMovies_lvMovieList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- search Button-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addMovies_btnSearch"
        android:layout_below="@+id/addMovies_btnHome"
        android:background="@android:color/transparent"
        android:layout_alignRight="@+id/homeImageView"
        android:layout_alignEnd="@+id/homeImageView"
        android:layout_alignLeft="@+id/homeImageView"
        android:layout_alignStart="@+id/homeImageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addMovies_tbSearch"
        android:layout_alignBottom="@+id/addMovies_btnSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/addMovies_btnSearch"
        android:layout_toStartOf="@+id/addMovies_btnSearch"
        android:text="Search Movies List" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addMovies_lvMovieList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/addMovies_ImportMovieQueue"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/addMovies_btnSearch" />

</RelativeLayout>
