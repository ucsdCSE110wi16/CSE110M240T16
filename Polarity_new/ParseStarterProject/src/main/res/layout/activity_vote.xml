<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/themeCharcoal"
    tools:context=""
    android:clickable="true"> <!-- Insert associate Java File here -->

    <!--back button image-->

    <!--Behind Who's Going-->

    <!-- Behind Vote-->

    <TextView
        android:textColor="@color/themeWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vote On Movies"
        android:textSize="28dp"
        android:gravity="center"
        android:id="@+id/vote_txtTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/vote_btnHome"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/vote_btnBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/vote_txtTitle"
        android:layout_toStartOf="@+id/vote_txtTitle"
        android:background="@drawable/button_background"
        android:textColor="@color/themeWhite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="home"
        android:id="@+id/vote_btnHome"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/vote_txtTitle"
        android:layout_toRightOf="@+id/vote_txtTitle"
        android:background="@drawable/button_background"
        android:textColor="@color/themeWhite" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Vote!"
        android:id="@+id/vote_btnVote"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_background"
        android:textColor="@color/themeWhite" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/vote_btnCancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_background"
        android:textColor="@color/themeWhite" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vote_lvMovies"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/vote_btnVote"
        android:background="@android:color/transparent"
        android:layout_below="@+id/vote_btnBack"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />


</RelativeLayout>