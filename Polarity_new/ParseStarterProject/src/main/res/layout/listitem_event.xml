<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/eventListItem_tbTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:text="&lt;Title>"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listitem_event_month"
        android:layout_toEndOf="@+id/listitem_event_month"
        android:layout_marginLeft="5dp"
        android:paddingTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;M>"
        android:id="@+id/listitem_event_month"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:paddingTop="2dp"
        android:layout_marginLeft="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;>"
        android:id="@+id/listitem_event_date"
        android:layout_below="@+id/listitem_event_month"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/eventListItem_tbTitle"
        android:layout_toStartOf="@+id/eventListItem_tbTitle"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;tim>"
        android:id="@+id/listitem_event_time"
        android:layout_below="@+id/listitem_event_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_alignRight="@+id/listitem_event_date"
        android:layout_alignEnd="@+id/listitem_event_date"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="## people attending"
        android:id="@+id/listitem_event_number_people_attending"
        android:textColor="#000000"
        android:layout_below="@+id/listitem_event_date"
        android:layout_alignLeft="@+id/eventListItem_tbTitle"
        android:layout_alignStart="@+id/eventListItem_tbTitle" />

</RelativeLayout>