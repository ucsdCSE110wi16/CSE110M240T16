<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/themeCharcoal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=""> <!-- Insert associate Java File here -->

    <ImageView
        android:src="@drawable/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/inviteFriends_btnBack"
        android:layout_alignLeft="@+id/inviteFriends_btnBack"
        android:layout_alignRight="@+id/inviteFriends_btnBack"
        android:layout_alignEnd="@+id/inviteFriends_btnBack"
        android:layout_above="@+id/inviteFriends_lvFriendsList" />

    <ImageView
        android:src="@drawable/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/inviteFriends_btnHome"
        android:layout_alignStart="@+id/inviteFriends_btnHome"
        android:layout_above="@+id/inviteFriends_lvFriendsList" />

    <!-- FriendList ImageView -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendListImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/friend_list_large3"
        android:layout_below="@+id/backImageView"
        android:paddingTop="10dp"/>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="28dp"
        android:text="Event Title"
        android:id="@+id/inviteFriends_txtTitle"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/inviteFriends_btnHome"
        android:layout_toRightOf="@+id/inviteFriends_btnBack"
        android:layout_toEndOf="@+id/inviteFriends_btnBack"
        android:layout_alignBottom="@+id/inviteFriends_btnBack"
        android:gravity="center|center_vertical"
        android:textColor="@color/themeWhite" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inviteFriends_btnBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inviteFriends_btnHome"
        android:layout_alignTop="@+id/inviteFriends_txtTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inviteFriends_lvFriendsList"
        android:choiceMode="singleChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/inviteFriends_btnBack"
        android:paddingTop="10dp"/>

</RelativeLayout>