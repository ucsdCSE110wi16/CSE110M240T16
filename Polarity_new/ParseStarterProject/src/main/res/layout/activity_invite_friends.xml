<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/themeCharcoal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.InviteFriends">

    <ImageView
        android:src="@drawable/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/searchField"
        android:layout_alignStart="@+id/backButton"
        android:layout_alignLeft="@+id/backButton"
        android:layout_alignRight="@+id/backButton"
        android:layout_alignEnd="@+id/backButton" />

    <ImageView
        android:src="@drawable/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/searchButton"
        android:layout_alignLeft="@+id/homeButton"
        android:layout_alignStart="@+id/homeButton" />

    <!-- Search ImageView-->
    <ImageView
        android:src="@drawable/search_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchImageView"
        android:layout_alignTop="@+id/searchField"
        android:layout_alignRight="@+id/searchButton"
        android:layout_alignEnd="@+id/searchButton"
        android:layout_alignLeft="@+id/searchButton"
        android:layout_alignStart="@+id/searchButton"
        android:layout_alignBottom="@+id/searchButton" />

    <!-- ImportQueueImageView-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/importQueueImageView"
        android:layout_alignTop="@+id/addMoviesButton"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/addMoviesButton"
        android:layout_alignEnd="@+id/addMoviesButton"
        android:layout_alignLeft="@+id/addMoviesButton"
        android:layout_alignStart="@+id/addMoviesButton"
        android:layout_alignBottom="@+id/addMoviesButton"
        android:src="@drawable/loginbuttonbackground"/>

    <!-- SelectAllFriends ImageView-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voteButtonImageView"
        android:src="@drawable/loginbuttonbackground"
        android:layout_above="@+id/movieListImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/voteButton"
        android:layout_alignRight="@+id/voteButton"
        android:layout_alignEnd="@+id/voteButton" />

    <!-- Friend list ImageView-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieListImageView"
        android:src="@drawable/friendList_large2"
        android:layout_alignTop="@+id/friendsList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/importQueueImageView" />

    <!-- Search Movies Imageview-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchMoviesImageView"
        android:src="@drawable/textviewbackground"
        android:layout_alignBottom="@+id/searchField"
        android:layout_below="@+id/backButton"
        android:layout_alignRight="@+id/searchField"
        android:layout_alignEnd="@+id/searchField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Friends"
        android:id="@+id/titleText"
        android:layout_alignParentTop="true"
        android:textColor="@color/themeWhite"
        android:gravity="center|center_vertical"
        android:layout_toRightOf="@+id/backImageView"
        android:layout_alignRight="@+id/searchMoviesImageView"
        android:layout_alignEnd="@+id/searchMoviesImageView" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/searchField" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeButton"
        android:layout_alignTop="@+id/titleText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:text="Invite Friends"
        android:id="@+id/addMoviesButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/friendsList"
        android:layout_alignEnd="@+id/friendsList"
        android:textColor="@color/themeWhite" />

    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select All Friends"
        android:id="@+id/voteButton"
        android:layout_below="@+id/searchField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/searchImageView"
        android:layout_alignEnd="@+id/searchImageView"
        android:textColor="@color/themeWhite" />

    <Button
        android:background="@android:color/transparent"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchButton"
        android:layout_below="@+id/homeButton"
        android:layout_alignLeft="@+id/homeButton"
        android:layout_alignStart="@+id/homeButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchField"
        android:layout_alignBottom="@+id/searchButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/searchButton"
        android:layout_toStartOf="@+id/searchButton"
        android:text="Search Friends List" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendsList"
        android:choiceMode="singleChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/voteButton"
        android:layout_above="@+id/addMoviesButton" />

</RelativeLayout>
